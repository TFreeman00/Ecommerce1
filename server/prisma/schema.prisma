generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int     @id(map: "admin_pkey") @default(autoincrement())
  name        String
  price       Decimal @db.Money
  description String
  inStock     Int
}

model users {
  id       Int    @id @default(autoincrement())
  email    String @unique(map: "users_email_idx")
  password String
  isAdmin Boolean
}

model orders {
  id    Int     @id @default(autoincrement())
  items String
  total Decimal @db.Money
  isCart Boolean
}

